<div id="bg-wrapper">
  <button type="button" id="bg-change-btn"> change color</button>
</div>

<style>
  button {
    text-transform: uppercase;
    font-size: var(--font-size-2);
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1px solid var(--gray-4);
    background-color: var(--gray-1);
    border-radius: var(--radius-2);
    line-height: normal;
    padding: 0.3ch 1ch;
    cursor: pointer;
  }
  button:focus-visible {
    outline: 1px solid var(--gray-5);
    outline-offset: 2px;
    background-color: var(--gray-2);
  }
  button:hover {
    background-color: var(--gray-2);
  }
  div {
    height: 200px;
    background-color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: var(--radius-2);
  }
</style>

<script is:inline>
  const bgWrapperElement = document.querySelector("#bg-wrapper");
  const bgChangeBtn = document.querySelector("#bg-change-btn");
  function random(number) {
    return Math.floor(Math.random() * (number + 1));
  }

  bgChangeBtn.addEventListener("click", () => {
    const randomColor = `rgb(${random(255)}, ${random(255)}, ${random(255)})`;
    bgWrapperElement.style.backgroundColor = randomColor;
  });
</script>
